
@{
    ViewData["Title"] = "Account";
}
@model BurnBuilder.Models.User

<h1>Account Details</h1>

@*Wasn't too sure what this page was supposed to look like so I did my best guess*@
<form asp-action="UpdateAccount">
    <label>Email Address: </label>
    <input asp-for="EmailAddress" class="roundcorners" required size="15" />
    <br />

    <label>First Name: </label>
    <input asp-for="FirstName" class="roundcorners" required size="15" />
    <br />

    <label>Last Name: </label>
    <input asp-for="LastName" class="roundcorners" required size="15" />
    <br />
    <label>Password</label> <input asp-for="Password" type="password" id="myInput" /><br />

    <label>Current time</label> <input asp-for="Created" /><br />

    <label><button type="submit">Save Changes to Account</button></label>
    <label><button type="delete">Delete Account</button></label>

</form>

<a href="@Url.Action("EditDeck", "Home")">Edit Deck</a>
