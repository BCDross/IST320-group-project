
@{
    ViewData["Title"] = "ViewCard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model BurnBuilder.Models.Card
<h1>ViewCard</h1>
<br />

<form asp-action="ViewCard" method="post">
    <label>Name of Card: </label>
    <input asp-for="Name" class="roundcorners" required size="15" /><br />
    <div class="card" style="width: 20rem;">
        <div class="card-body">
            <h5 class="card-title">Deck title</h5>
            <h6 class="card-subtitle mb-2 text-muted">Deck subtitle</h6>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        </div>
    </div>
    <br />

    <label for="decks">Choose a deck:</label>
    <select name="decks" id="decks">
        <option value="deck1">Deck 1</option>
        <option value="deck2">Deck 2</option>
        <option value="deck3">Deck 3</option>
        <option value="deck4">Deck 4</option>
    </select>
    <br><br>
    <input type="submit" value="Submit">



</form>

